{
  "name": "ecom-flow",
  "version": "0.0.1",
  "description": "An ecommerce management solution for local ecommerce solopreneurs",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "start": "node dist/main.js",
    "start:dev": "nodemon -w ./src -w .env src/main.ts",
    "lint": "prettier --write \"src/**/*.ts\"",
    "typeorm": "npm run build && ts-node ./node_modules/typeorm/cli.js -d dist/db/data-source.js",
    "migration:generate": "npm run typeorm -- migration:generate",
    "migration:run": "npm run typeorm -- migration:run",
    "migration:revert": "npm run typeorm -- migration:revert",
    "migration:drop": "npm run typeorm -- schema:drop"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "pg": "^8.13.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.1",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/os-moussao/ecom-flow.git"
  },
  "author": {
    "name": "Oussama Moussaoui",
    "url": "https://github.com/os-moussao",
    "email": "omoussaoui1337@gmail.com"
  }
}
